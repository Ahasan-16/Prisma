generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model Uuser{
  id Int @id @default(autoincrement())
  email String @unique
  name String? @default("Ahasan") //? dea mane null value grohonjoggo
  number1 Float //double
  number2 Float @db.Float //float
  number3 Decimal @default(16)
}

//enum data type mane ami define kore dicchi ei column e sodo ei data gola takbe
enum Name{
  Mohammad
  Ahasan
}

model NewModel{
   id Int @id @default(autoincrement())
   name Name
}
model AnotherModel{
  id Int @id @default(autoincrement())
  birthday DateTime @db.Date
  isBirth Boolean @default(true)
  picture Bytes @db.LongBlob
  binary Bytes @db.Binary(50)
}

model User{
  id Int @id @default(autoincrement())
  email String @unique
  password String
  profile Profile?
  post Post[]
  comment Comment[]
  
}
//user er sate Profile er somporko one to one
model Profile{
  id Int @id @default(autoincrement())
  firstName String
  lastName String
  mobile String
  city String
  userId Int @unique
  User User @relation(fields: [userId],references: [id],onDelete: Restrict,onUpdate: Cascade)

}

//user er sate Post er somporko one to many
model Post{
  id Int @id @default(autoincrement())
  title String
  description String
  userId Int @unique
  User User @relation(fields: [userId],references: [id],onDelete: Restrict,onUpdate: Cascade)

  comment Comment[]
}

//many to many

model Comment{
  id Int @id @default(autoincrement())
  text String
  userId Int @unique
  User User @relation(fields: [userId],references: [id],onDelete: Restrict,onUpdate: Cascade)

  postId Int
  Post Post @relation(fields: [postId],references: [id],onDelete: Restrict,onUpdate: Cascade)
}